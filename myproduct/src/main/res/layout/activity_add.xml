<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.InsertAddressActivity"
    android:orientation="vertical">

 <LinearLayout
     android:layout_marginLeft="50dp"
     android:layout_marginTop="120dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="姓名："/>
     <EditText
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:hint="请输入真实姓名"
         android:id="@+id/shou_name"/>
 </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:id="@+id/shou_phone"/>
    </LinearLayout>
   <LinearLayout
       android:layout_marginLeft="50dp"
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="收货地址："/>
       <EditText
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:hint="请输入收货地址"
           android:id="@+id/shou_address"/>
   </LinearLayout>
   <LinearLayout
       android:layout_marginLeft="50dp"
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="邮政编码："/>
       <EditText
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:hint="请输入邮政编码"
           android:id="@+id/shou_bian"/>
   </LinearLayout>
    <Button
        android:id="@+id/shou_add"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="提交地址"
        android:background="@drawable/btn_draw"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"/>
</LinearLayout>