<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AssessActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <com.facebook.drawee.view.SimpleDraweeView
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:id="@+id/assess_iv"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/assess_title"/>
            <TextView
                android:layout_marginTop="40dp"
                android:textSize="20dp"
                android:textColor="#ff00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/assess_price"/>
        </LinearLayout>
    </LinearLayout>
      <EditText
          android:layout_marginTop="40dp"
          android:background="#ccddcc"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:hint="请在此写上你对商品的评价"
          android:gravity="left"
          android:id="@+id/assess_etn"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <GridView
           android:numColumns="2"
           android:id="@+id/gv_id"
           android:layout_marginTop="30dp"
           android:layout_width="300dp"
           android:layout_height="wrap_content" />
       <ImageView
           android:visibility="visible"
           android:id="@+id/photo_id"
           android:layout_marginTop="30dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/images"/>
   </LinearLayout>
    <CheckBox
        android:id="@+id/sync_id"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步到圈子"/>
    <Button
        android:id="@+id/report"
        android:layout_marginTop="50dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#ff00ff"
        android:layout_marginLeft="100dp"
        android:text="发表"/>
</LinearLayout>